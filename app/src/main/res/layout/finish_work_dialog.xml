<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingTop="40dp"
    android:paddingBottom="40dp"
    android:background="@drawable/dialog_whrite_solid_circle_bg"

    >
    <TextView
        android:id="@+id/finish_off_tv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="未完成"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:background="@drawable/finish_work_off_bg"
        />
    <TextView
        android:id="@+id/finish_on_tv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="完成"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/finish_work_on_bg"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="100dp"
        />

</LinearLayout>