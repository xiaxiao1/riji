<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/comment_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:layout_marginBottom="4dp"
    >


    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#eeeeee"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        />
    <Button
        android:id="@+id/send_btn"
        android:layout_width="@dimen/comment_view_btn_width"
        android:layout_height="@dimen/comment_view_height"
        android:layout_alignParentRight="true"
        android:layout_below="@id/top_line"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/comment_btn_bg"
        android:text="发送"
        android:textColor="@drawable/text_color_state"

        android:textSize="16sp"
        />
    <EditText
        android:id="@+id/editview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/comment_view_height"
        android:maxLines="4"
        android:maxLength="100"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:layout_marginRight="6dp"
        android:layout_below="@id/top_line"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/whrite_solid_bg"
        android:hint="这是默认提示的文字"
        android:textColorHint="#dddddd"
        android:text="sdsdsdsds"
        android:layout_toLeftOf="@id/send_btn"

        />
